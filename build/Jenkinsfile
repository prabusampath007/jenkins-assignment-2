webappimagename = "prabusampath007/mywebapp"
sqlimagename = "prabusampath007/mysql"
registryCredential = 'docker-credentials'

pipeline {
    agent { label 'ec2-agent-build'}
    stages {
        stage('Build image') {
            steps {
                script{
                    sh "cd .."
                    dockerImage = docker.build(webappimagename, "-f ./webapp/Dockerfile .")
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                    dockerImage = docker.build(sqlimagename, "-f ./sql/Dockerfile .")
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}